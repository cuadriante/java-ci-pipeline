<?xml version="1.0" encoding="UTF-8"?>
<project name="java-ci-pipeline" default="all">
  
  
  <property file="java-ci-pipeline.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.zip"/>
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.ear"/>
    <include name="*.jar"/>
    <include name="*.klib"/>
    <include name="*.ane"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.openjdk-16" value="${jdk.home.openjdk-16}/bin"/>
  <path id="jdk.classpath.openjdk-16">
    <fileset dir="${jdk.home.openjdk-16}">
      <include name="../openjdk-16.0.2!/java.base"/>
      <include name="../openjdk-16.0.2!/java.compiler"/>
      <include name="../openjdk-16.0.2!/java.datatransfer"/>
      <include name="../openjdk-16.0.2!/java.desktop"/>
      <include name="../openjdk-16.0.2!/java.instrument"/>
      <include name="../openjdk-16.0.2!/java.logging"/>
      <include name="../openjdk-16.0.2!/java.management"/>
      <include name="../openjdk-16.0.2!/java.management.rmi"/>
      <include name="../openjdk-16.0.2!/java.naming"/>
      <include name="../openjdk-16.0.2!/java.net.http"/>
      <include name="../openjdk-16.0.2!/java.prefs"/>
      <include name="../openjdk-16.0.2!/java.rmi"/>
      <include name="../openjdk-16.0.2!/java.scripting"/>
      <include name="../openjdk-16.0.2!/java.se"/>
      <include name="../openjdk-16.0.2!/java.security.jgss"/>
      <include name="../openjdk-16.0.2!/java.security.sasl"/>
      <include name="../openjdk-16.0.2!/java.smartcardio"/>
      <include name="../openjdk-16.0.2!/java.sql"/>
      <include name="../openjdk-16.0.2!/java.sql.rowset"/>
      <include name="../openjdk-16.0.2!/java.transaction.xa"/>
      <include name="../openjdk-16.0.2!/java.xml"/>
      <include name="../openjdk-16.0.2!/java.xml.crypto"/>
      <include name="../openjdk-16.0.2!/jdk.accessibility"/>
      <include name="../openjdk-16.0.2!/jdk.attach"/>
      <include name="../openjdk-16.0.2!/jdk.charsets"/>
      <include name="../openjdk-16.0.2!/jdk.compiler"/>
      <include name="../openjdk-16.0.2!/jdk.crypto.cryptoki"/>
      <include name="../openjdk-16.0.2!/jdk.crypto.ec"/>
      <include name="../openjdk-16.0.2!/jdk.crypto.mscapi"/>
      <include name="../openjdk-16.0.2!/jdk.dynalink"/>
      <include name="../openjdk-16.0.2!/jdk.editpad"/>
      <include name="../openjdk-16.0.2!/jdk.hotspot.agent"/>
      <include name="../openjdk-16.0.2!/jdk.httpserver"/>
      <include name="../openjdk-16.0.2!/jdk.incubator.foreign"/>
      <include name="../openjdk-16.0.2!/jdk.incubator.vector"/>
      <include name="../openjdk-16.0.2!/jdk.internal.ed"/>
      <include name="../openjdk-16.0.2!/jdk.internal.jvmstat"/>
      <include name="../openjdk-16.0.2!/jdk.internal.le"/>
      <include name="../openjdk-16.0.2!/jdk.internal.opt"/>
      <include name="../openjdk-16.0.2!/jdk.internal.vm.ci"/>
      <include name="../openjdk-16.0.2!/jdk.jartool"/>
      <include name="../openjdk-16.0.2!/jdk.javadoc"/>
      <include name="../openjdk-16.0.2!/jdk.jcmd"/>
      <include name="../openjdk-16.0.2!/jdk.jconsole"/>
      <include name="../openjdk-16.0.2!/jdk.jdeps"/>
      <include name="../openjdk-16.0.2!/jdk.jdi"/>
      <include name="../openjdk-16.0.2!/jdk.jdwp.agent"/>
      <include name="../openjdk-16.0.2!/jdk.jfr"/>
      <include name="../openjdk-16.0.2!/jdk.jlink"/>
      <include name="../openjdk-16.0.2!/jdk.jpackage"/>
      <include name="../openjdk-16.0.2!/jdk.jshell"/>
      <include name="../openjdk-16.0.2!/jdk.jsobject"/>
      <include name="../openjdk-16.0.2!/jdk.jstatd"/>
      <include name="../openjdk-16.0.2!/jdk.localedata"/>
      <include name="../openjdk-16.0.2!/jdk.management"/>
      <include name="../openjdk-16.0.2!/jdk.management.agent"/>
      <include name="../openjdk-16.0.2!/jdk.management.jfr"/>
      <include name="../openjdk-16.0.2!/jdk.naming.dns"/>
      <include name="../openjdk-16.0.2!/jdk.naming.rmi"/>
      <include name="../openjdk-16.0.2!/jdk.net"/>
      <include name="../openjdk-16.0.2!/jdk.nio.mapmode"/>
      <include name="../openjdk-16.0.2!/jdk.sctp"/>
      <include name="../openjdk-16.0.2!/jdk.security.auth"/>
      <include name="../openjdk-16.0.2!/jdk.security.jgss"/>
      <include name="../openjdk-16.0.2!/jdk.unsupported"/>
      <include name="../openjdk-16.0.2!/jdk.unsupported.desktop"/>
      <include name="../openjdk-16.0.2!/jdk.xml.dom"/>
      <include name="../openjdk-16.0.2!/jdk.zipfs"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.openjdk-16}"/>
  <property name="project.jdk.bin" value="${jdk.bin.openjdk-16}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.openjdk-16"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module java-ci-pipeline -->
  
  <dirname property="module.java-ci-pipeline.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.java-ci-pipeline" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.java-ci-pipeline" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.java-ci-pipeline" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.java-ci-pipeline" value="-encoding UTF-8 -source 14 -target 14 ${compiler.args}"/>
  
  <property name="java-ci-pipeline.output.dir" value="${module.java-ci-pipeline.basedir}/out/production/java-ci-pipeline"/>
  <property name="java-ci-pipeline.testoutput.dir" value="${module.java-ci-pipeline.basedir}/out/test/java-ci-pipeline"/>
  
  <path id="java-ci-pipeline.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="java-ci-pipeline.module.production.classpath">
    <path refid="${module.jdk.classpath.java-ci-pipeline}"/>
  </path>
  
  <path id="java-ci-pipeline.runtime.production.module.classpath">
    <pathelement location="${java-ci-pipeline.output.dir}"/>
  </path>
  
  <path id="java-ci-pipeline.module.classpath">
    <path refid="${module.jdk.classpath.java-ci-pipeline}"/>
    <pathelement location="${java-ci-pipeline.output.dir}"/>
  </path>
  
  <path id="java-ci-pipeline.runtime.module.classpath">
    <pathelement location="${java-ci-pipeline.testoutput.dir}"/>
    <pathelement location="${java-ci-pipeline.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.java-ci-pipeline">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.java-ci-pipeline">
    <patternset refid="excluded.from.module.java-ci-pipeline"/>
  </patternset>
  
  <path id="java-ci-pipeline.module.sourcepath">
    <dirset dir="${module.java-ci-pipeline.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.java-ci-pipeline" depends="compile.module.java-ci-pipeline.production,compile.module.java-ci-pipeline.tests" description="Compile module java-ci-pipeline"/>
  
  <target name="compile.module.java-ci-pipeline.production" depends="register.custom.compilers" description="Compile module java-ci-pipeline; production classes">
    <mkdir dir="${java-ci-pipeline.output.dir}"/>
    <javac2 destdir="${java-ci-pipeline.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.java-ci-pipeline}/javac">
      <compilerarg line="${compiler.args.java-ci-pipeline}"/>
      <bootclasspath refid="java-ci-pipeline.module.bootclasspath"/>
      <classpath refid="java-ci-pipeline.module.production.classpath"/>
      <src refid="java-ci-pipeline.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.java-ci-pipeline"/>
    </javac2>
    
    <copy todir="${java-ci-pipeline.output.dir}">
      <fileset dir="${module.java-ci-pipeline.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.java-ci-pipeline.tests" depends="register.custom.compilers,compile.module.java-ci-pipeline.production" description="compile module java-ci-pipeline; test classes" unless="skip.tests"/>
  
  <target name="clean.module.java-ci-pipeline" description="cleanup module">
    <delete dir="${java-ci-pipeline.output.dir}"/>
    <delete dir="${java-ci-pipeline.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.java-ci-pipeline" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.java-ci-pipeline" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.java-ci-pipeline:jar" value="${basedir}/out/artifacts/java_ci_pipeline_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.java-ci-pipeline.jar" value="${artifacts.temp.dir}/java-ci-pipeline.jar"/>
  </target>
  
  <target name="artifact.java-ci-pipeline:jar" depends="init.artifacts, compile.module.java-ci-pipeline" description="Build &#39;java-ci-pipeline:jar&#39; artifact">
    <property name="artifact.temp.output.java-ci-pipeline:jar" value="${artifacts.temp.dir}/java_ci_pipeline_jar"/>
    <mkdir dir="${artifact.temp.output.java-ci-pipeline:jar}"/>
    <jar destfile="${temp.jar.path.java-ci-pipeline.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${java-ci-pipeline.output.dir}"/>
    </jar>
    <copy file="${temp.jar.path.java-ci-pipeline.jar}" tofile="${artifact.temp.output.java-ci-pipeline:jar}/java-ci-pipeline.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.java-ci-pipeline:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.java-ci-pipeline:jar}"/>
    <copy todir="${artifact.output.java-ci-pipeline:jar}">
      <fileset dir="${artifact.temp.output.java-ci-pipeline:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>